<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/FirstFragment">

    <fragment
        android:id="@+id/FirstFragment"
        android:name="com.ahmedkenawy.cfhtest.ui.auth.sign_in.SignInFragment"
        android:label="@string/first_fragment_label"
        tools:layout="@layout/fragment_sing_in">

        <action
            android:id="@+id/action_SingInFragment_to_SingUpFragment"
            app:destination="@id/SecondFragment" />
    </fragment>
    <fragment
        android:id="@+id/SecondFragment"
        android:name="com.ahmedkenawy.cfhtest.ui.auth.sign_up.SignUpFragment"
        android:label="@string/second_fragment_label"
        tools:layout="@layout/fragment_sing_up">

        <action
            android:id="@+id/action_SingUpFragment_to_SingInFragment"
            app:destination="@id/FirstFragment" />
    </fragment>
</navigation>